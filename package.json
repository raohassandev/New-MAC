{
  "name": "macsys-monorepo",
  "version": "1.0.0",
  "description": "Modbus Device Management System - Monorepo",
  "scripts": {
    "start": "npm run start:server",
    "start:server": "cd server && npm start",
    "start:client": "cd client && npm run preview",
    "dev": "npm cache clean --force && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && npm run install:server && npm run install:client",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "cd server && npm run lint",
    "lint:client": "cd client && npm run lint",
    "format": "npm run format:server && npm run format:client",
    "format:server": "cd server && npm run format",
    "format:client": "cd client && npm run format",
    "format:check": "npm run format:check:server && npm run format:check:client",
    "format:check:server": "cd server && npm run format:check",
    "format:check:client": "cd client && npm run format:check",
    "fix": "npm run format && npm run lint",
    "prepare": "husky install"
  },
  "keywords": [
    "modbus",
    "device",
    "management",
    "monitoring"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@serialport/bindings-cpp": "^13.0.1",
    "@serialport/stream": "^13.0.0",
    "modbus-serial": "^8.0.21-no-serial-port",
    "serialport": "^13.0.0"
  }
}
